{
  "name": "bifrost-vETH-2.0",
  "version": "1.0.0",
  "author": "Edwin Wang",
  "license": "MIT",
  "homepage": "https://bifrost.finance",
  "scripts": {
    "build": "hardhat compile",
    "hardhat:deploy": "hardhat --network hardhat deploy",
    "ethereum:deploy": "hardhat --network ethereum deploy",
    "ethereum:verify": "hardhat --network ethereum verify",
    "goerli:deploy": "hardhat --network goerli deploy",
    "goerli:verify": "hardhat --network goerli verify",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "test:gas": "cross-env REPORT_GAS=true yarn test",
    "lint:solidity": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write contracts/**/*.sol deploy/**/*.ts test/*.ts tasks/**/*.ts hardhat.config.ts"
  },
  "engines": {
    "node": "^18"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/mocha": "^10.0.1",
    "axios": "^1.3.2",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.23",
    "hardhat-gas-reporter": "^1.0.9",
    "merkletreejs": "^0.3.9",
    "prettier": "^2.8.2",
    "prettier-plugin-solidity": "^1.1.2",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  }
}
